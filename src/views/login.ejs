            username.style.border="2px solid red";
            return false;
    }
    
}


let password = document.getElementById("password");
    let pswd = document.getElementById("pswd");

function valid2(){
    if(password.value == ""){

        alert("** Fields cannot be blank!  Please enter valid Password !!");
        return false;
    }

    else if(password.value.length<=5){
            pswd.style.color="red";
            pswd.innerHTML="Password is too short !!";
            password.style.border="2px solid red";
            return false;
    }
    else if(password.value.length>=6 && password.value.length<=10){
            pswd.style.color="orange";
            pswd.innerHTML = "Password is Moderate !!";
            password.style.border="2px solid orange";
            return false;
    }
    else{
      pswd.style.color = "green";
      pswd.innerHTML = "Password is Strong !!";
      password.style.border = "2px solid green";
